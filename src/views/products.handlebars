<h1>Products</h1>

<p>Welcome, {{user.first_name}} - {{user.last_name}}</p>
<p>Age:{{user.age}}</p>
<p>Email: {{user.email}}</p>
<p>Role: {{user.role}}</p>
<p>Cart: {{user.cart}}</p>

<ul style="list-style: none;">
    {{#each products}}
        <li>Title: {{this.title}}</li>
        <li>Price: ${{this.price}}</li>
        <li>Stock: {{this.stock}}</li>
        <li>Category: {{this.category}}</li>
        <li>
            <a href="/products/{{_id}}">View</a>
        </li>
        <li>
            <hr>
        </li>
    {{/each}}   
</ul>

{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}&limit={{limit}}">Previous</a>
{{/if}}

{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}&limit={{limit}}">Next</a>
{{/if}}

<p>Page {{currentPage}} of {{totalPages}}</p>